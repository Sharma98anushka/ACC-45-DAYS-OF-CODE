#include<stdio.h>
int main(){
int n,i,j=0,k=0,a1[100],a2[100],a3[100],a4[100];
printf("Enter the size of array: ");
scanf("%d",&n);
for(i=0;i<n;i++){
    scanf("%d",&a1[i]);
}
for(i=0;i<n;i++){
    if(a1[i]%2==0){
a2[j]=a1[i];
j++;
    }
    else{
        a3[k]=a1[i];
        k++;
    }
    }
        printf("The even elements are: ");
    for(i=0;i<j;i++){
        printf("%d\t",a2[i]);
    }
    printf("\nThe odd elements are: ");
    for(i=0;i<k;i++){
        printf("\n%d\t",a3[i]);
    }

return 0;
}

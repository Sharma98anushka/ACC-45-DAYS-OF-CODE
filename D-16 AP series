#include <stdio.h>
void main()
{
int first,diff,terms,value,sum=0,i;
int first1,ratio1,terms1,value1, sum1=0,j;
printf("\nEnter the number of terms in AP series\n");
scanf("%d", &terms);
printf("\nEnter first term and common difference of AP series\n");
scanf("%d %d", &first, &diff);
value = first;
printf("AP SERIES\n");
for(i = 0; i < terms; i++) 
{
printf("%d ", value);
sum += value;
value = value + diff;
}
printf("\nSum of the AP series till %d terms is %d\n", terms, sum);
}

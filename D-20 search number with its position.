#include<stdio.h>
int main(){
	int n,i,a[100],found=0,s;
	printf("Enter the size of array: ");
	scanf("%d",&n);
	for(i=0;i<n;i++){
		scanf("%d",&a[i]);
			}
	printf("Enter a number to search : ");
	scanf("%d",&s);

	for(i=0;i<n;i++){
	if(a[i]==s){
		found=1;
		break;
	}
}
if(found==1){
	printf("%d is found at position %d",s,i+1);
}
else{
	printf("%d is not found",s);
}
	return 0;
}

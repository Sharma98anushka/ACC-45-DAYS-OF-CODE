
#include <stdio.h>
#include <math.h>
void main()
{       int q, n;
	int dec=0,i=0,j,r;

     printf("\n\nConvert Binary to Decimal:\n ");
     printf("Input  the binary number :");
	scanf("%d",&n);
	q=n;
	while(n!=0)
	{  r= n % 10;
	   dec=dec+r*pow(2,i);
	   n=n/10;
	   i++;
	}
        printf("\nThe Binary Number : %d\nThe equivalent Decimal  Number is : %d\n\n",q,dec);
}

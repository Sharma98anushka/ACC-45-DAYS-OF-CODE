include<stdio.h>

int main() {
    int fd,ld,n;
    printf("Enter a number:");
    scanf("%d",&n);
    ld=n%10;
    while(n!=0){
        fd=n%10;
        n=n/10;
        
    }
    printf("first number=%d,last number=%d\n",fd,ld);
printf("sum of first and last digit =%d",fd+ld);
printf("\nproduct of first and last digit =%d",fd*ld);
    return 0;
    
}
